  ],
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "cross-env": "5.2.0",
    "eslint": "5.15.1",
    "eslint-config-cozy-app": "1.1.12",
